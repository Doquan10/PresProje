@model IEnumerable<PresProje.Models.PRES_PROD>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Pager pager = new Pager();

    int pageNo = 0;

    if(ViewBag.Pager != null){
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Anasayfa    <h1>@ViewBag.id</h1></h3>
            </div>

        </div>

        <div class="clearfix"></div>

        <div class="row">
            

            <div class="col-md-12 col-sm-12  ">
           

                <div class="x_panel">
                    <!--Main Alan-->
                    <div class="x_content">

                        </div>
                        <br />
                        <div id="PlaceHolderHere"></div>
                        <script>
                         
                        </script>
                     

                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Üretim Tarih</th>
                                <th>Parça No</th>
                                <th>İş Emri</th>
                                <th>OP</th>
                                <th>Zaman</th>
                                <th>Oper. Sayısı</th>
                                <th>Hata Kodu</th>
                                <th>Kabul</th>
                                <th>Açıklama</th>
                                <th>Düzenle</th>
                                <th>Sil</th>

                            </tr>
                            </thead>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.ID</td>
                                    <td>@i.URETIM_TARIH</td>
                                    <td>@i.PARCA_NO</td>
                                    <td>@i.IS_EMRI</td>
                                    <td>@i.OPERASYON_SAYISI</td>
                                    <td>@i.SURE_DK</td>
                                    <td>@i.OPERATOR_SAYISI</td>
                                    <td>@i.HATA_KODU</td>
                                    <td>@i.VURUS</td>
                                    <td>@i.ACIKLAMA</td>
                                    <td align="center">
                                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#exampleModalCenter" data-url="@Url.Action($"Edit/{i.ID}")">
                                           Düzenle
                                        </button>
                                    </td>
                                    <td align="center">
                                        <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#delete_modal" data-url="@Url.Action($"Delete/{i.ID}")">
                                            Sil
                                        </button>
                                    </td>

                                </tr>
                            }

                        </table>
                        <div class="container">
                            @if (pager.TotalPages > 0){
                                <ul class="pagination justify-content-end">
                                    @for (var pge = pager.StartPage; pge <= pager.EndPage;pge++){
                                        <li class="page-item @(pge == pager.CurrentPage ? "active" :"")">
                                            <a class="page-link" asp-controller="Admin" asp-action="Index" asp-route-pg="@pge">@pge</a>
                                        </li>
                                    }
                                </ul>
                            }
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
  
</div>
<!-- end panel -->
