
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Pres Performans </title>

    <!-- Bootstrap -->
    <link href="../vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="../vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="../vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="../vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="../build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
       
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="/Login/SignIn" method="post">
                        <h1>Giriş Yap</h1>
                        <div>
                            <input type="text" class="form-control" name="Username" placeholder="Kullanıcı Adı" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" name="Password" password="Password" placeholder="Şifre" required="" />
                        </div>
                        <div>
                            <label>
                                <input type="checkbox" name="KeepLoggedIn" />
                            </label>
                            
                            <button type="submit" class="btn btn-info submit">Log in</button>
                            
                        </div>
                        @if(ViewData["ValidateMessage"] != null){
                            <br />
                            <label>@ViewData["ValidateMessage"]</label>
                        }
                        <div class="clearfix"></div>

                        <div class="separator">
                         
                            <div class="clearfix"></div>
                            <br />

                            <div>
                            <p>©@DateTime.Now.Year Coskunoz</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>

